<% include ../partials/header %>
<div class="row justify-content-center">
  <div class="col-md-12 text-center">
    <h1>Create a New Campground</h1>
  </div>
  <div class="col-xs-12 col-md-6 col-lg-4 mt-3">
    <form class="form-signin" action="/campgrounds" method="POST">
      <label for="inputName">Name</label>
      <input class="form-control" id="inputName" type="text" name="name" placeholder="name" required="" autofocus="">
      <label for="inputPrice" class="sr-only">Price</label>
      <input class="form-control" id="inputPrice" type="number" name="price" placeholder="price" min="0.01" step="0.01">
      <label for="inputImage" class="sr-only">Image</label>
      <input class="form-control" id="inputImage" type="text" name="image" placeholder="image url">
      <label for="inputDescription" class="sr-only">Description</label>
      <input class="form-control" id="inputDescription" type="text" name="description" placeholder="description">
      <label for="location" class="mt-2">Location</label>
      <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
      <button class="btn btn-lg btn-default btn-primary btn-block">Submit!</button>
    </form>
    <div class="form-signin">
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>
<% include ../partials/footer %>