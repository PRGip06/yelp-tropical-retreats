<% include ../partials/header %>
<div class="row justify-content-center">
  <div class="col-md-12 text-center">
    <h1>Edit <%= campground.name %></h1>
  </div>
    <div class="col-xs-12 col-md6 col-lg-4 mt-3">
      <form class="form-signin" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <label for="inputName">Name</label>
          <input class="form-control" id="inputName" type="text" name="campground[name]" value="<%= campground.name %>">
        <label for="inputPrice">Price</label>
          <input class="form-control" id="inputPrice" type="number" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
        <label for="inputImage">Image</label>
          <input class="form-control" id="inputImage" type="text" name="campground[image]" value="<%= campground.image %>">
        <label for="inputDescription">Description</label>
          <input class="form-control" id="inputDescription" type="text" name="campground[description]" value="<%= campground.description %>">
        <label for="location" class="mt-2">Location</label>
          <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
          <button class="btn btn-lg btn-default btn-primary btn-block">Submit!</button>
      </form>
      <div class="form-signin">
        <a href="/campgrounds">Go Back</a>
      </div>
    </div>
</div>  
<% include ../partials/footer %>