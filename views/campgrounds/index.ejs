<% include ../partials/header %>
<header class="jumbotron">
  <div class="container">
    <img class="beach-house mb-2" src="../img/beach-house.svg">
      <h1 class="title ml-3 mt-1"> Welcome To Yelp Tropical Retreats!</h1>
        <div class="clearfix"></div>
    <p class="subtitle">View our hand-picked paradise retreats from all over the world</p>
      <a class="btn btn-primary btn-md mt-1" href="/campgrounds/new"><span class="fa fa-plus mr-1"></span> Add New Campground</a>
    <p>
      <form action="/campgrounds" method="GET" class="form-inline">
        <div class="form-group">
          <input type="text" name="search" placeholder="Campground search..." class="form-search"  />
          <button type="submit"><span class="fa fa-search"></span></button>
        </div>
      </form>
    </p>
  </div>
</header>
<div class="row text-center">
  <div class="col-md-12">
    <% if(noMatch !== null){ %>
      <h3>
        <%= noMatch %>
      </h3>
      <% } %>
  </div>
  <% campgrounds.forEach(function(campground){ %>
    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
      <div class="card">
        <img class="card-img-top" src="<%= campground.image %>" alt="<%= campground.name %>">
        <div class="card-body">
          <h5 class="card-title">
            <%= campground.name %>
          </h5>
          <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary btn-sm">More Info</a>
        </div>
      </div>
    </div>
  <% }); %>
</div>
<% include ../partials/footer %>